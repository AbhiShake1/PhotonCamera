<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <Switch
            android:id="@+id/setting_turnNR"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:gravity="center|start|center_horizontal"
            android:text="@string/turn_on_system_nr" />

        <Switch
            android:id="@+id/setting_disablealign"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:text="@string/disable_aligning"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/setting_framecounter"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:gravity="center_vertical"
            android:text="@string/frame_count"
            android:textColor="#FFFFFF" />

        <SeekBar
            android:id="@+id/setting_framecnt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:max="20"
            android:min="1"
            android:progress="3" />

        <TextView
            android:id="@+id/setting_chroma"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:gravity="center_vertical"
            android:text="@string/chroma_nr_count"
            android:textColor="#FFFFFF" />

        <SeekBar
            android:id="@+id/setting_chromacnt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:max="65"
            android:min="1"
            android:progress="12" />

        <TextView
            android:id="@+id/setting_luma"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:gravity="center_vertical"
            android:text="@string/luma_nr_count"
            android:textColor="#FFFFFF" />

        <SeekBar
            android:id="@+id/setting_lumacnt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:max="150"
            android:min="1"
            android:progress="1" />

        <Switch
            android:id="@+id/setting_enhanced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enhanced_processing" />

    </LinearLayout><![CDATA[












    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">






]]>
</FrameLayout>