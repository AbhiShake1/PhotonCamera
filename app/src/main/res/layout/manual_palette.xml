<?xml version="1.0" encoding="utf-8"?>

<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="uimodel"
                type="com.particlesdevs.photoncamera.ui.camera.model.CameraFragmentModel"/>

        <variable name="manual_mode_model"
                  type="com.particlesdevs.photoncamera.ui.camera.model.ManualModeModel"/>

        <variable name="knob_model"
                  type="com.particlesdevs.photoncamera.ui.camera.model.KnobModel"/>

    </data>

    <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/manual_mode"
            android:layout_width="match_parent"
            android:visibility="gone"
            tools:visibility="visible"
            manualPanelVisibility="@{manual_mode_model.manualPanelVisible}"
            android:layout_height="wrap_content">

        <com.particlesdevs.photoncamera.ui.camera.views.manualmode.knobview.KnobView
                android:id="@+id/knobView"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                knobVisibility="@{knob_model.knobVisible}"
                setKnobModel="@{knob_model.manualModel}"
                knobReset="@{knob_model.knobResetCalled}"
                bindKnobRotate="@{uimodel}"
        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttons_container"
                android:layout_below="@id/knobView"
                android:orientation="horizontal"
                android:background="@color/panel_transparency"
                bindViewGroupChildrenRotate="@{uimodel}"
                selectViewIdInViewGroup="@{manual_mode_model.selectedTextViewId}"
        >

            <TextView
                    android:id="@+id/focus_option_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAppearance="@style/BoldTextWithShadow"
                    android:textColor="@color/manual_text_color"
                    android:paddingBottom="6dp"
                    android:paddingTop="5dp"
                    android:textSize="15sp"
                    app:drawableBottomCompat="@drawable/manual_control_icon_focus"
                    app:drawableTint="@color/manual_text_color"
                    tools:text="NULL"
                    android:text="@{manual_mode_model.focusText}"
                    android:onClick="@{manual_mode_model.focusTextClicked}"
                    android:textAlignment="center"
                    android:layout_weight="1"
            />

            <TextView
                    android:id="@+id/exposure_option_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingBottom="6dp"
                    android:paddingTop="5dp"
                    android:textAppearance="@style/BoldTextWithShadow"
                    android:textColor="@color/manual_text_color"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    app:drawableBottomCompat="@drawable/manual_control_icon_exposure"
                    app:drawableTint="@color/manual_text_color"
                    android:layout_weight="1"
                    android:text="@{manual_mode_model.exposureText}"
                    android:onClick="@{manual_mode_model.exposureTextClicked}"
                    tools:text="NULL"/>


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="NULL"
                    android:paddingBottom="6dp"
                    android:paddingTop="5dp"
                    android:textAppearance="@style/BoldTextWithShadow"
                    android:textColor="@color/manual_text_color"
                    android:id="@+id/iso_option_tv"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    app:drawableBottomCompat="@drawable/manual_control_icon_iso"
                    app:drawableTint="@color/manual_text_color"
                    android:layout_weight="1"
                    android:text="@{manual_mode_model.isoText}"
                    android:onClick="@{manual_mode_model.isoTextClicked}"
            />


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="NULL"
                    android:paddingBottom="6dp"
                    android:paddingTop="5dp"
                    android:textAppearance="@style/BoldTextWithShadow"
                    android:textColor="@color/manual_text_color"
                    android:id="@+id/ev_option_tv"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    app:drawableBottomCompat="@drawable/ic_exposure"
                    app:drawableTint="@color/manual_text_color"
                    android:layout_weight="1"
                    android:text="@{manual_mode_model.evText}"
                    android:onClick="@{manual_mode_model.evTextClicked}"
            />
        </LinearLayout>
    </RelativeLayout>
</layout>