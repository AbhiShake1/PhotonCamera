<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/exif_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ncard_layout"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/exifText"
        android:layout_width="39dp"
        android:layout_height="23dp"
        android:layout_marginTop="8dp"
        android:text="Exif"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.23"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/value_filename" />

    <TextView
        android:id="@+id/value_filename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No file"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/value_flength"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:drawableStart="@drawable/ic_focal_length"
        android:drawablePadding="5dp"
        android:text="@string/unknown"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/value_device"
        app:layout_constraintTop_toBottomOf="@+id/value_device" />

    <TextView
        android:id="@+id/value_res"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="24dp"
        android:text="@string/unknown"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/value_fnumber"
        app:layout_constraintTop_toBottomOf="@+id/value_flength" />

    <TextView
        android:id="@+id/value_exposure"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="24dp"
        android:text="@string/unknown"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/value_flength"
        app:layout_constraintTop_toTopOf="@+id/value_flength" />

    <TextView
        android:id="@+id/value_date"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:drawableStart="@drawable/ic_file"
        android:drawablePadding="5dp"
        android:text="@string/unknown"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/value_fnumber"
        app:layout_constraintTop_toBottomOf="@+id/fileText" />

    <TextView
        android:id="@+id/value_filesize"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="24dp"
        android:text="@string/unknown"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/value_date"
        app:layout_constraintTop_toTopOf="@+id/value_date" />

    <TextView
        android:id="@+id/value_device"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:drawableStart="@drawable/ic_device"
        android:drawablePadding="5dp"
        android:text="@string/unknown"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exifText" />

    <TextView
        android:id="@+id/value_iso"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="24dp"
        android:text="@string/unknown"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/value_exposure"
        app:layout_constraintTop_toTopOf="@+id/value_exposure" />

    <TextView
        android:id="@+id/value_fnumber"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:drawableStart="@drawable/ic_aperture"
        android:drawablePadding="5dp"
        android:text="@string/unknown"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/value_flength"
        app:layout_constraintTop_toBottomOf="@+id/value_flength" />

    <LinearLayout
        android:id="@+id/exif_histogram"
        android:layout_width="0dp"
        android:layout_height="101dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.144"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/value_fnumber" />

    <TextView
        android:id="@+id/fileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="File"
        android:textAlignment="textStart"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/exifText"
        app:layout_constraintTop_toBottomOf="@+id/exif_histogram" />

</androidx.constraintlayout.widget.ConstraintLayout>