<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

    <data>

        <variable
                name="thumbnailmodel"
                type="com.eszdman.photoncamera.gallery.model.GridThumbnailModel"/>
    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            >

        <androidx.cardview.widget.CardView
                android:id="@+id/square_image_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                >

            <com.eszdman.photoncamera.gallery.views.SquareImageView
                    android:id="@+id/square_image_view"
                    android:background="@drawable/ic_photo"
                    android:scaleType="centerCrop"
                    imageFromBitmap="@{thumbnailmodel.bitmap}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</layout>
