<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
>
    <FrameLayout
            android:layout_weight="1.0"
            android:layout_height="match_parent"
            android:layout_width="0dp"

    >
        <ImageButton
                android:id="@+id/flip_camera"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="#00000000"
                android:clickable="true"
                android:contentDescription="Lens Switch Button"
                android:src="@drawable/ic_flip_camera"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:visibility="visible"
                android:padding="10dp"
                android:scaleType="centerInside"
        />

    </FrameLayout>

    <FrameLayout
            android:layout_weight="0.1"
            android:layout_height="match_parent"
            android:layout_width="100dp"
            android:padding="10dp"
    >

        <ImageButton
                android:id="@+id/picture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#00000000"
                android:clickable="true"
                android:contentDescription="Shutter Button"
                android:src="@drawable/roundbutton"
                android:scaleType="centerInside"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:visibility="visible"
                android:layout_gravity="center"
                tools:text="Shot"
        />

        <ProgressBar
                android:id="@+id/progressloading"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:indeterminate="false"
                android:max="100"
                android:progressDrawable="@drawable/circular_progress_bar2"
                android:layout_gravity="center"
                tools:visibility="visible"
        />

    </FrameLayout>

    <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
    >

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ImageOut"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/round"
                app:civ_border_color="@color/Light"
                app:civ_border_overlay="true"
                app:civ_border_width="3dp"
        />
    </FrameLayout>
</LinearLayout>